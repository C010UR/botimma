                },
                "configs": {
                    "type": "array",
                    "items": [
                        {
                            "type": "object",
                            "properties": {
                                "label": {
                                    "title": "Label that will be prompted to the user.",
                                    "type": "string",
                                    "maxLength": 30,
                                    "pattern": "^[\\w ]+$",
                                    "default": ""
                                },
                                "link": {
                                    "title": "File link.",
                                    "type": "string",
                                    "format": "uri"
                                },
                                "path": {
                                    "title": "Path with a file name to save.",
                                    "pattern": "^(\\w:)?(\\\\|\\/?[\\w\\-. ]+)+(\\\\|\\/)?$",
                                    "type": "string"
                                },
                                "note": {
                                    "title": "Warns user about something.",
                                    "type": "string",
                                    "maxLength": 255,
                                    "default": ""
                                }
                            },
                            "required": [
                                "label",
                                "link",
                                "path",
                                "note"
                            ]
                        }
                    ]
                }
            }
        }
    },
    "required": [
        "commands"
    ]
}